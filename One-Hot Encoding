from sklearn.preprocessing import OneHotEncoder
text = input("Enter a sentence: ") # Take input sentence
words = text.lower().split() # Split sentence into words
encoder = OneHotEncoder(sparse_output=False) # Initialize One-Hot Encoder
one_hot = encoder.fit_transform([[w] for w in words]) # Fit and transform words
# Display result
print("Words:", words)
print("One-Hot Encoding:")
print(one_hot)
