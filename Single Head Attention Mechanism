import torch
import torch.nn.functional as F
# Define Query, Key, and Value matrices
Q = torch.tensor([[1.0, 0.0]])
K = torch.tensor([[1.0, 0.0],[0.0, 1.0]])
V = torch.tensor([[10.0, 0.0],[0.0, 10.0]])
scores = torch.matmul(Q, K.T) # Compute attention scores (dot product)
attention_weights = F.softmax(scores, dim=-1) # Apply softmax to get attention weights
attention_output = torch.matmul(attention_weights, V) # Compute attention output
# Display results
print("Attention Scores:", scores)
print("Attention Weights:", attention_weights)
print("Attention Output:", attention_output)
