!pip install gensim
from gensim.models import Word2Vec
text = "Every moment is a beginning"
tokens = text.split()
model = Word2Vec(
    sentences=[tokens],
    vector_size=100,
    window=5,
    min_count=1,
    workers=1,
    sg=1
  )
for word in tokens:
    print(word)
    print(model.wv[word])
    print()
